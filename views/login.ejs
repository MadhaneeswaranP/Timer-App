<link href="/form-styles.css" rel="stylesheet" type="text/css">

<div class="container">
    <form action="/login" method="POST" class="form">
        <h1 class="form__title">Login</h1>
        <div class="form__message form__message--error">
            <% if (messages.error) { %>
                <%= messages.error %>
            <% } %>
        </div>
        <div class="form__input-group">
            <input type="email" class="form__input" id="email" autofocus placeholder="Email" name="email" required>
        </div>
        <div class="form__input-group">
            <input type="password" class="form__input" id="password" autofocus placeholder="Password" name="password" required>
        </div>
        <div>
            <button class="form__button" type="submit">Login</button>
        </div>
    </form>
    <p class="form__text">
        <a href="/register" class="form__link">Don't have an account? Sign up</a>
    </p>
</div>